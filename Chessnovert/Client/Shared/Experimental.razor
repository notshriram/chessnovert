                    Move move = new Move(activePiece.Position, position, activePiece.Color, board[destination.Row, destination.Col]);
                    MakeMove(move);
                    Game.Moves.Add(move);
                    activePiece = null!;
                    Console.WriteLine($"It's {currentTurn}'s turn");
                    validMoves = CountValidMoves(currentTurn);
                    if (validMoves == 0)
